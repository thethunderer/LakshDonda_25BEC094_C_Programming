#include <stdio.h>

int main() {
    float a, b, c, total, average;

    printf("Enter marks of Subject 1: ");
    scanf("%f", &a);

    printf("Enter marks of Subject 2: ");
    scanf("%f", &b);

    printf("Enter marks of Subject 3: ");
    scanf("%f", &c);

    total = a + b + c;
    average = total / 3;

    printf("Total Marks = %.2f\n", total);
    printf("Average Marks = %.2f\n", average);

    return 0;
}
